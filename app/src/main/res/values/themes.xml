<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Stressless" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Stressless.GridTheme" parent="Theme.Stressless">
        <item name="android:padding">5dp</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>

    <style name="Theme.Stressless.Button" parent="Theme.Stressless">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">13sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Theme.Stressless.EditText" parent="Theme.Stressless">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="Theme.Stressless.AuthenticationActivities" parent="Theme.Stressless">
        <item name="android:layout_marginHorizontal">15dp</item>
    </style>

    <style name="Theme.Stressless.TextView.Header" parent="Theme.Stressless">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Theme.Stressless.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Stressless.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Stressless.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>